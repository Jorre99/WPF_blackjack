<Window x:Class="WPF_BlackJack.Presentation.StartingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BlackJack.Presentation"
        mc:Ignorable="d"
        Title="StartingScreen" Height="560" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="Black" Offset="0.0" />
                <GradientStop Color="Green" Offset="0.5" />
                <GradientStop Color="Black" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid>
            <Canvas>
                <Label Canvas.Top="150" Canvas.Left="220" Content="BlackJack" FontSize="80" Foreground="Red"/>
                <Image Source="../Images/Logo/blackjack_logo.png" Width="150" Canvas.Top="240" Canvas.Left="320"/>
            </Canvas>
            
            <Canvas>
                <Button Canvas.Top="400" Canvas.Left="300" Click="Button_Click" Style="{StaticResource ChangePlayButton}">
                </Button>
            </Canvas>
        </Grid>
    </Grid>
</Window>
